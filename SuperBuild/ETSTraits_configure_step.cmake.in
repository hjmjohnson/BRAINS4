message("Configuring ETSTraits:\n@ETSTraits_binary@")
set(ENV{LD_LIBRARY_PATH} "@CMAKE_CURRENT_BINARY_DIR@/python-build/lib")
set(ENV{DYLD_LIBRARY_PATH} "@CMAKE_CURRENT_BINARY_DIR@/python-build/lib")
set(ENV{VS_UNICODE_OUTPUT} "")

execute_process(
  COMMAND "@ETSTraits_PYTHON_EXECUTABLE@" setup.py config
  WORKING_DIRECTORY "@ETSTraits_binary@"
  RESULT_VARIABLE res
  )

if(NOT ${res} EQUAL 0)
  message(FATAL_ERROR "Error in config of ETSTraits:  cd @ETSTraits_binary@; @ETSTraits_PYTHON_EXECUTABLE@ setup.py config")
endif()
message("Numpy config worked.")
