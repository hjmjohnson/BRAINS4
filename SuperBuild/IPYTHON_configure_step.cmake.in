message("Configuring IPYTHON:\n@IPYTHON_binary@")
set(ENV{LD_LIBRARY_PATH} "@CMAKE_CURRENT_BINARY_DIR@/python-build/lib")
set(ENV{VS_UNICODE_OUTPUT} "")

# As explained in site.cfg.example - See http://projects.scipy.org/IPYTHON/browser/trunk/site.cfg.example
# Directories listed in variable such as library_dirs or source_dirs should be separated using os.pathsep
# On windows, the separator is ";" and ":" on unix-like platform
set(path_sep ":")
if(WIN32)
  set(path_sep ";")
endif()

# As explained in site.cfg.example, the library name without the prefix "lib" should be used.
# Nevertheless, on windows, only "libf2c" leads to a successful configuration and 
# installation of IPYTHON
set(f2c_libname "f2c")
if(WIN32)
  set(f2c_libname "libf2c")
endif()

# setup the site.cfg file
file(WRITE "@IPYTHON_binary@/site.cfg"
"
[blas]
library_dirs = @CLAPACK_binary@/BLAS/SRC/${CONFIG_TYPE}/${path_sep}@CLAPACK_binary@/F2CLIBS/libf2c/${CONFIG_TYPE}/
libraries = blas,${f2c_libname}

[lapack]
library_dirs = @CLAPACK_binary@/SRC/${CONFIG_TYPE}/
lapack_libs = lapack
")

execute_process(
  COMMAND "@IPYTHON_PYTHON_EXECUTABLE@" setup.py config
  WORKING_DIRECTORY "@IPYTHON_binary@"
  RESULT_VARIABLE res
  )

if(NOT ${res} EQUAL 0)
  message(FATAL_ERROR "Error in config of IPYTHON")
endif()
message("Numpy config worked.")
